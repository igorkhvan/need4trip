NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key
# Опционально для серверных операций
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# Public Base URL (SEO, canonicals, OG, notifications)
# ============================================================================
# Canonical production domain. Used by getPublicBaseUrl() in runtimeConfig.ts.
# Fallback: https://need4trip.app
NEXT_PUBLIC_APP_URL=https://need4trip.app

# ============================================================================
# Rate Limiting (Upstash Redis)
# ============================================================================
# Required for API rate limiting protection
# Create account: https://console.upstash.com/
# Free tier: 10,000 commands/day
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# ============================================================================
# Paywall Mode (Server-Only)
# ============================================================================
# Controls paywall enforcement behavior.
# Values: hard (default, production), soft_beta_strict (beta — paywall shown, user can continue)
# PAYWALL_MODE=hard
